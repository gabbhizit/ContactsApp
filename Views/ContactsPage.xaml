<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsAppMaui.Views.ContactsPage"
             Title="Contacts">
    <VerticalStackLayout Spacing="10">
        <Label 
        Text="Welcome to .NET MAUI!"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Button x:Name="btnAddContact" Text="Add Contact" Clicked="btnAddContact_Clicked"></Button>
        <Button x:Name="btnEditContact" Text="Edit Contact" Clicked="btnEditContact_Clicked"></Button>
        <ListView x:Name="listContacts" SeparatorColor="Green" BackgroundColor="Transparent" SeparatorVisibility="Default" RowHeight="50" 
              ItemTapped="listContacts_ItemTapped" ItemSelected="listContacts_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Email}"></TextCell>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>